<h2>Admin Sign Up</h2>

<%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <%= f.email_field :email, label: :email, autofocus: true %>

    <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, label: :password, autocomplete: "off" %>

    <%= f.password_field :password_confirmation, label: :password_confirmation, autocomplete: "off" %>

    <%= f.text_area :message, label: :message, placeholder: 'Role, Your Details,etc..', autocomplete: "off" %>

    <%= f.submit "Sign up", class: 'btn btn-primary' %>

<% end %>

<%= render "admins/shared/links" %>
