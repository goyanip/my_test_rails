<div class="navbar navbar-inverse">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
    </div>
    <div id="navbar" class="collapse navbar-collapse">
      <ul class="nav navbar-nav">
        <li class="<%= params[:controller] == 'verifications' ? 'active' : '' %>"><%= link_to 'Verification', new_verification_path %></li>
        <li class="<%= params[:controller] == 'home' ? 'active' : '' %>"><%= link_to 'Home', root_path %></li>
        <li class="<%= params[:controller] == 'complaint' ? 'active' : '' %>"><%= link_to 'Register Complaint', complaints_path %></li>
        <li class="<%= params[:controller] == 'about' ? 'active' : '' %>"><%= link_to 'About', about_index_path %></li>
        <li class="<%= params[:controller] == 'contacts' ? 'active' : '' %>"><%= link_to 'Contact Us', new_contact_path %></li>
      </ul>
      <div class="dropdown navbar-right">
        <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
          <!-- for admin and user button with not nested ternary  -->
          <%= if user_signed_in? then
                current_user.email
              else
                admin_signed_in? ? current_admin.email : 'Guest'
              end %>
          <span class="caret"></span>
        </button>
        <ul class="dropdown-menu navbar-right">
          <% if user_signed_in? %>
              <li class="dropdown-header"><%= 'Logged in as' + current_user.email %></li>
              <li><%= link_to 'Profile', edit_user_registration_path %></li>
              <li><%= link_to 'Settings', edit_user_registration_path %></li>
              <li role="separator" class="divider"></li>
              <li><%= link_to 'Log out', destroy_user_session_path, method: :delete %></li>
          <% elsif admin_signed_in? %>
              <li class="dropdown-header"><%= 'Logged in as Admin' %></li>
              <li><%= link_to 'Administration', rails_admin_path %></li>
              <li><%= link_to 'Profile', edit_admin_registration_path %></li>
              <li><%= link_to 'Settings', edit_admin_registration_path %></li>
              <li role="separator" class="divider"></li>
              <li><%= link_to 'Log out', destroy_admin_session_path, method: :delete %></li>
          <% else %>
              <li><%= link_to 'Login', new_user_session_path %></li>
              <li><%= link_to 'Admin Area', new_admin_session_path %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
